<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
		android:layout_margin="8dp"
		xmlns:android="http://schemas.android.com/apk/res/android"
		app:cardCornerRadius="8dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

	<LinearLayout
			android:layout_margin="5dp"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<TextView
				android:id="@+id/product_name"
				android:text="Product Name"
				android:textAlignment="center"
				android:textSize="20sp"
				android:layout_margin="5dp"
				android:textColor="@android:color/black"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
		<TextView
				android:id="@+id/category_name"
				android:text="Category Name"
				android:layout_margin="2dp"
				android:textAlignment="center"
				android:textColor="@android:color/black"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<TextView
					android:text="View Count"
					android:textColor="@android:color/black"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:textAlignment="center"
					android:layout_height="wrap_content"/>
			
			<TextView
					android:text="Order Count"
					android:textColor="@android:color/black"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:textAlignment="center"
					android:layout_height="wrap_content"/>
			
			<TextView
					android:text="Most Shared"
					android:textColor="@android:color/black"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:textAlignment="center"
					android:layout_height="wrap_content"/>
			
		</LinearLayout>
		
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<TextView
					android:id="@+id/view_count"
					android:text="View Count"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:textAlignment="center"
					android:layout_height="wrap_content"/>
			
			<TextView
					android:id="@+id/order_count"
					android:text="Order Count"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:textAlignment="center"
					android:layout_height="wrap_content"/>
			
			<TextView
					android:id="@+id/most_shared"
					android:text="Most Shared"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:textAlignment="center"
					android:layout_height="wrap_content"/>
		
		</LinearLayout>
		
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<TextView
					android:text="Tax Name : "
					android:layout_margin="5dp"
					android:textColor="@android:color/black"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			
			<TextView
					android:id="@+id/tax_name"
					android:text="Order Count"
					android:layout_margin="5dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
		
		</LinearLayout>
		
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<TextView
					android:text="Tax Value : "
					android:layout_margin="5dp"
					android:textColor="@android:color/black"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			
			<TextView
					android:id="@+id/tax_value"
					android:text="Order Count"
					android:layout_margin="5dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
		
		</LinearLayout>
		
		
		
		<TextView
				android:id="@+id/date_added"
				android:text="Product Name"
				android:layout_margin="5dp"
				android:textAlignment="center"
				android:textSize="15sp"
				android:textColor="@android:color/black"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
		<android.support.v7.widget.RecyclerView
				android:id="@+id/variant_recycler"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
	</LinearLayout>
	
	
	
</android.support.v7.widget.CardView>